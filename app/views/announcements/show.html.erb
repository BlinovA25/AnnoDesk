<div>
  <img style="width: 400px;" src="<%= @announcement.picture %>"/>
</div>

<p>
  <strong>Text:</strong>
  <%= @announcement.text %>
</p>

<p>
  <strong>Author:</strong>
  <% @users.each do |u| %>
    <% if(u.id == @announcement.user_id) %>
      <%= u.login %>
    <% end %>
  <% end %>
</p>

<%= link_to 'Edit', edit_announcement_path(@announcement) %>
<%= link_to 'Back', announcements_path %>


